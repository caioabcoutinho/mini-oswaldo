<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@user.errors.count, "erro") %> encontrado(s):</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <% if @user.new_record? %>
          <span class="form-text text-muted">(Obrigatório)</span>
        <% else %>
          <span class="form-text text-muted">(Deixe em branco para não alterar)</span>
        <% end %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, "Confirmação da Senha", class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="card-footer text-end">
      <%= form.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
