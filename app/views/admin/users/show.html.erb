<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Visualizar Usuário</h1>
  <%= link_to "Voltar para a lista", admin_users_path, class: "btn btn-secondary" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
    <p>
      <strong>Criado em:</strong>
      <%= @user.created_at.to_fs(:short) %>
    </p>
  </div>
  <div class="card-footer d-flex justify-content-end align-items-center gap-2">
    <%= link_to "Editar", edit_admin_user_path(@user), class: "btn btn-warning" %>
    <%= button_to "Excluir", admin_user_path(@user), method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: 'Você tem certeza?' } } %>
  </div>
</div>
