<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Visualizar categoria</h1>
  <%= link_to "Voltar para a lista", categories_path, class: "btn btn-secondary" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <p>
      <strong>Nome:</strong>
      <%= @category.name %>
    </p>

    <p>
      <strong>Descrição:</strong>
      <%= @category.description %>
    </p>
  </div>
  <div class="card-footer d-flex justify-content-end align-items-center gap-2">
      <%= link_to content_tag(:i, "", class: "bi bi-pencil") + " Editar", edit_category_path(@category), class: "btn btn-warning" %>
      <%= button_to content_tag(:i, "", class: "bi bi-trash") + " Excluir esta categoria", @category, method: :delete, class: "btn btn-danger d-inline-block ms-2", form: { data: { turbo_confirm: 'Você tem certeza?' } } %>
  </div>
</div>