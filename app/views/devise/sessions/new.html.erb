<% content_for :body_class, "login-bg" %>

<div class="container-fluid vh-100 d-flex justify-content-center align-items-center">

  <div class="col-11 col-sm-8 col-md-6 col-lg-4 col-xl-3">
    
    <div class="card shadow-lg border-0 rounded-3">
      <div class="card-body p-4 p-lg-5">

        <div class="text-center mb-4">
          
          <h1 class="display-5" style="letter-spacing: 1px;">
            <span class="text-muted fw-light">{</span>
            <span class="fw-normal">BEEP</span>
            <span class="fw-bold">CODE</span>
            <span class="text-muted fw-light">}</span>
          </h1>

          <h5 class="text-muted mt-3 mb-0">Bem-vindo ao Oswaldo</h5>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class="input-group mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
          </div>

          <div class="input-group mb-4">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Senha" %>
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid mb-3">
            <%= f.submit "Entrar", class: "btn btn-info btn-lg text-white" %>
          </div>
          
        <% end %>
        
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>