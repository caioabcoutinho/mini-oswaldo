<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Visualizar produto</h1>
  <%= link_to "Voltar para a lista", products_path, class: "btn btn-secondary" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <p>
      <strong>Nome:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Descrição:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Preço:</strong>
      <%= number_to_currency(@product.price) %>
    </p>

    <p>
      <strong>Categoria:</strong>
      <%= @product.category.name if @product.category %>
    </p>
  </div>
  <div class="card-footer d-flex justify-content-end align-items-center gap-2">
      <%= link_to content_tag(:i, "", class: "bi bi-pencil") + " Editar", edit_product_path(@product), class: "btn btn-warning" %>
      <%= button_to content_tag(:i, "", class: "bi bi-trash") + " Excluir este produto", @product, method: :delete, class: "btn btn-danger d-inline-block ms-2", form: { data: { turbo_confirm: 'Você tem certeza?' } } %>
  </div>
</div>